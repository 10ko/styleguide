- var data = public.styleguide.modules.templates._data.module

h2.title=data.name
if data.items.intro
	each paragraph in data.items.intro
		p!=paragraph
ul.templates-group
	each template in data.items.templates
		li
			if template.link
				a(href=template.link)
					img(src='assets/images/#{template.thumbnailFile}', width='200', alt='#{template.templateName}')
					.template-name=template.templateName
			else
				img(src='assets/images/#{template.thumbnailFile}', width='200', alt='#{template.templateName}')
				.template-name=template.templateName